<h1><%= @question.title %></h1>
  <p><%= @question.description %></p>

<h3>Answers</h3>
<% @question.answers.each do |answer| %>
  <p><%= answer.description %></p>
<% end %>

<%= form_for [@question, @answer || @question.answers.new] do |f| %>
<p>
  <%= f.label :description %>
  <%= f.text_field :description %>
</p>

<%= f.submit "Submit"%>

<% end %>
